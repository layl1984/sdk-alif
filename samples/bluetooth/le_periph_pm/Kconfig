source "Kconfig.zephyr"

config DATA_STRING_LENGTH
	int "Data string size"
	range 5 250
	default 243
	help
	  Defines how many bytes will be sent in a notification

config SLEEP_ENABLED
	bool "Application sleep enabled"
	default n
	help
	  M55 core can sleep during the operation setting yes allows full STOP mode operation.

config SLEEP_TIME_CONNECTED
	int "Sleep time when connected (milliseconds)"
	default 2150
	help
	  Wait before entering sleep mode in milliseconds when BLE is connected.

config SLEEP_TIME_DISCONNECTED
	int "Sleep time when disconnected (milliseconds)"
	default 5000
	help
	  Wait before entering sleep mode in milliseconds when BLE is disconnected.
	  Set to 0 to sleep forever.

config WAIT_BEFORE_SLEEP_SECONDS
	depends on SLEEP_ENABLED
	int "Wait before sleep seconds"
	range 0 3600
	default 0
	help
	  Wait before entering sleep mode in seconds.

config DISABLE_BLE_BEFORE_SLEEP
	bool "Disable BLE before sleep. This depends WAIT_BEFORE_SLEEP_SECONDS"
	default n
	help
	  BLE will be disabled before entering sleep mode and re-enabled after wakeup.

config LPGPIO_WAKEUP_SOURCE
	depends on "$(dt_nodelabel_enabled,lpgpio)"
	int "LPGPIO Wakeup source will be used to wakeup from sleep"
	range 0 1
	default 1
	help
	  Defines which LPGPIO pin will be used as wakeup source from sleep.
	  0 - LPGPIO0, 1 - LPGPIO1

config LPGPIO_M55_IRQ_ENABLED
	depends on "$(dt_nodelabel_enabled,lpgpio)"
	bool "LPGPIO M55 core IRQ enabled"
	default y
	help
	  Configures LPGPIO to generate interrupt on M55 core when M55 is
	  running.

choice
	depends on LPGPIO_M55_IRQ_ENABLED
	prompt "LPGPIO IRQ edge trigger select"
	default LPGPIO_M55_IRQ_EDGE_FALLING
	help
	  Select which signal edge will trigger the interrupt.
	config LPGPIO_M55_IRQ_EDGE_RISING
	bool "Rising edge"
	config LPGPIO_M55_IRQ_EDGE_FALLING
	bool "Falling edge"
	config LPGPIO_M55_IRQ_EDGE_BOTH
	bool "Rising and falling edges"
endchoice

menu "Logging"

module = MAIN
module-str = main
source "subsys/logging/Kconfig.template.log_config"

endmenu # "Logging"
