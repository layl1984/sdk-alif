/*
 * Enable RTC and Set the counter to increment every 1sec
 */

&rtc0 {
	prescaler = <1>;
	status = "okay";
};

&lpgpio {
	status = "disabled";
};

&uart4 {
	status = "disabled";
};

&uart2 {
	status = "okay";
};

&lpuart {
	status = "okay";
};

&pd_syst {
	status = "disabled";
};
&pd_sse700_aon {
	status = "disabled";
};

&subsys_off {
	min-residency-us = <4000>;
	exit-latency-us = <3000>;
	status = "disabled";
};

&standby_s2ram {
	min-residency-us = <19000000>;
	status = "disabled";
};

&stop_s2ram {
	min-residency-us = <4000>;
	exit-latency-us = <3000>;
	status = "okay";
};

/ {
	chosen {
		zephyr,cortex-m-idle-timer = &rtc0;
	};
};
